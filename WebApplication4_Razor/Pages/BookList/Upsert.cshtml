@page
@model WebApplication4_Razor.Pages.BookList.UpsertModel
@{
}
<h2 class="text-primary">
    @(Model.Student.Id != 0 ? "Edit Book" : "New Book")
</h2>
<form method="post">
    <input type="hidden" asp-for="Student.Id" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="table table-bordered">
        <div class="container">
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Student.Date"></label>
                    <div>
                        <input asp-for="Student.Date" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Student.Date" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Student.Time"></label>
                    <div>
                        <input asp-for="Student.Time" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Student.Time" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Student.Availabilitiy"></label>
                    <div>
                        <input asp-for="Student.Availabilitiy" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Student.Availabilitiy" class="text-danger"></span>
            </div>
        </div>
      
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-success form-control">@(Model.Student.Id!=0?"Update":"Save")</button>
                <a asp-page="Index" class="btn btn-block">Back To List</a>
            </div>
        </div>
    </div>
 </form>
@section Scripts
{
<partial name="_ValidationScriptsPartial"/>
}